@using System.Data
@model DataTable


<h1>Student Listing</h1>
<hr>
<table class ="table">
    <th>ID</th>
    <th>Name</th>
    <th>Hindi</th>
    <th>Maths</th>
    <th>English</th>
    <tbody>
        @foreach(DataRow dr in Model.Rows){
            <tr>
                <td>@dr["ID"]</td>
                <td>@dr["Name"]</td>
                <td>@dr["Hindi"]</td>
                <td>@dr["Maths"]</td>
                <td>@dr["English"]</td>
                @{
                    int total=0;
                    total=Convert.ToInt32(@dr["Hindi"])+Convert.ToInt32(@dr["Maths"])+Convert.ToInt32(@dr["English"]);
                }
                <td>@total</td>
            </tr>
        }
    </tbody>
</table>